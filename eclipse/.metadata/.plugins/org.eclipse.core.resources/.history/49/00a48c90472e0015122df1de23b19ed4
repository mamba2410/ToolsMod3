package mamba2410.toolsmod3.item.tools.parts;

import mamba2410.toolsmod3.item.base.SubItemCore;
import mamba2410.toolsmod3.lib.MetadataItemNames;
import net.minecraft.item.ItemStack;
import cpw.mods.fml.common.registry.LanguageRegistry;

public class ToolHead extends SubItemCore{
	
	public ItemStack material;

	public ToolHead(String type) {
		super("ToolHead" + type, "", MetadataItemNames.HeadNames.clone(), type + "Head");
		setTextureName("minecraft:brick");
		for(int i = 0; i < MetadataItemNames.HeadNames.length; i++)
		LanguageRegistry.instance().addStringLocalization("item." + MetadataItemNames.HeadNames[i] + type + "Head.name", "en_US",
				MetadataItemNames.HeadNames[i] + " " + type + " Head");
	}

}
